<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryWhite</item>
    </style>

    <style name="BasicListItemStyle">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BasicTextButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BasicListItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="WorkoutTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">72px</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="WorkoutSubtitle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
